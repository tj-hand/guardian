# Guardian Backend Configuration

# Application
APP_NAME=Guardian
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
SECRET_KEY=guardian-dev-secret-key-change-in-production

# API
API_PREFIX=/api

# Token Settings
TOKEN_EXPIRY_MINUTES=10
TOKEN_LENGTH=6

# Session Settings
SESSION_EXPIRY_DAYS=7
JWT_ALGORITHM=HS256

# Database (PostgreSQL)
POSTGRES_USER=guardian
POSTGRES_PASSWORD=guardian123
POSTGRES_HOST=database
POSTGRES_PORT=5432
POSTGRES_DB=guardian_db

# Email (Mailgun)
MAILGUN_API_KEY=
MAILGUN_DOMAIN=
MAILGUN_FROM_EMAIL=noreply@guardian.local
MAILGUN_FROM_NAME=Guardian Auth

# CORS
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
CORS_ALLOW_CREDENTIALS=true
CORS_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS
CORS_HEADERS=*

# Rate Limiting
RATE_LIMIT_REQUESTS=3
RATE_LIMIT_WINDOW_MINUTES=15

# Email Whitelist
ENABLE_EMAIL_WHITELIST=false

# Bolt Gateway (set to true when behind Bolt)
BOLT_GATEWAY_ENABLED=false
BOLT_GATEWAY_HEADER=X-Forwarded-By
BOLT_GATEWAY_VALUE=bolt-gateway
