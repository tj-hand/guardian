{
  "name": "@guardian/frontend",
  "version": "1.0.0",
  "description": "Guardian Layer 1 - Passwordless Authentication Frontend",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./components/*": "./dist/components/*",
    "./views/*": "./dist/views/*",
    "./stores/*": "./dist/stores/*"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build",
    "build:lib": "vite build --mode lib",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx --fix",
    "format": "prettier --write src/"
  },
  "peerDependencies": {
    "pinia": "^2.1.0",
    "vue": "^3.4.0",
    "vue-router": "^4.2.0"
  },
  "dependencies": {
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.0",
    "@vue/test-utils": "^2.4.3",
    "pinia": "^2.1.7",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^3.7.0",
    "vitest": "^1.0.0",
    "vue": "^3.4.0",
    "vue-router": "^4.2.5",
    "vue-tsc": "^1.8.0",
    "@types/node": "^20.10.0"
  },
  "keywords": [
    "guardian",
    "authentication",
    "passwordless",
    "vue3",
    "layer-1"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/tj-hand/guardian.git",
    "directory": "frontend"
  }
}
