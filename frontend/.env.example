# API Configuration
# Base URL for the backend API
VITE_API_BASE_URL=http://localhost:8000

# ===================================
# BRANDING CONFIGURATION
# White-label customization settings
# ===================================

# Application Identity
VITE_APP_NAME=Email Token Auth
VITE_COMPANY_NAME=My Company
VITE_APP_TAGLINE=Secure passwordless authentication

# Visual Assets
# Logo and favicon URLs (relative to public folder or absolute URLs)
VITE_BRAND_LOGO_URL=/logo.svg
VITE_BRAND_FAVICON_URL=/favicon.ico

# Color Scheme (hex format)
VITE_BRAND_PRIMARY_COLOR=#007bff
VITE_BRAND_SECONDARY_COLOR=#6c757d
VITE_BRAND_ACCENT_COLOR=#28a745
VITE_BRAND_SUCCESS_COLOR=#28a745
VITE_BRAND_ERROR_COLOR=#dc3545
VITE_BRAND_WARNING_COLOR=#ffc107

# Typography
# Font families for body text and headings
VITE_BRAND_FONT_FAMILY=-apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif
VITE_BRAND_HEADING_FONT_FAMILY=inherit

# Contact & Support
VITE_SUPPORT_EMAIL=support@example.com
VITE_SUPPORT_URL=

# Social Media Links (leave empty to hide)
VITE_TWITTER_URL=
VITE_LINKEDIN_URL=
VITE_GITHUB_URL=

# Footer Configuration
VITE_FOOTER_TEXT=
VITE_SHOW_POWERED_BY=true

# Authentication Configuration
# Length of email verification token (default: 6)
VITE_TOKEN_LENGTH=6
