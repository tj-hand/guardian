# Guardian Environment Configuration

# =============================================================================
# Database
# =============================================================================
POSTGRES_USER=guardian
POSTGRES_PASSWORD=guardian123
POSTGRES_DB=guardian_db

# =============================================================================
# Backend
# =============================================================================
SECRET_KEY=guardian-dev-secret-key-change-in-production

# Email (Mailgun)
MAILGUN_API_KEY=
MAILGUN_DOMAIN=
MAILGUN_FROM_EMAIL=noreply@guardian.local

# CORS
CORS_ORIGINS=http://localhost:5173,http://localhost:8080

# Email Whitelist
ENABLE_EMAIL_WHITELIST=false

# =============================================================================
# Gateway
# =============================================================================
GATEWAY_IMAGE=ghcr.io/tj-hand/bolt
GATEWAY_VERSION=latest
BOLT_GATEWAY_SECRET=

# =============================================================================
# Container Images (for production)
# =============================================================================
BACKEND_IMAGE=guardian-backend
BACKEND_VERSION=latest
FRONTEND_IMAGE=guardian-frontend
FRONTEND_VERSION=latest
